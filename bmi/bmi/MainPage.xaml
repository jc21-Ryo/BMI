<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:bmi"
             x:Class="bmi.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Entry Placeholder="身長をメートル単位で入力"
               VerticalOptions="CenterAndExpand"
               x:Name="EntryHeight"/>
        <Entry Placeholder="体重をKg単位で入力"
               VerticalOptions="CenterAndExpand"
               x:Name="EntryWeight"/>
        <Button Text="計算"
                VerticalOptions="CenterAndExpand"
                x:Name="ButtonBMI"/>
        <Label Text="結果を表示"
               VerticalOptions="CenterAndExpand"
               x:Name="LabelResult"/>
        <Button Text="別ページ計算" 
               VerticalOptions="Center"
               x:Name="ButtonBMI2" />
        
    </StackLayout>

</ContentPage>
